forbidden
CS CS

data
  flag0 = * : [0:1]
  flag1 = * : [0:1]
  turn  = * : [0:1]

process
registers
  $flag = * : [0:1]
  $turn = * : [0:1]
text
  L0: write: flag0 := 1;
      read: $flag := flag1;
      while $flag = 1 do {
        read: $turn := turn;
        if $turn != 0 then {
          write: flag0 := 0;
          while $turn != 0 do { 
            nop
          };
          write: flag0 := 1
        }
      };
      goto CS;
  CS: 
      write: turn := 1;
      write: flag0 := 0;
      goto L0

process
registers
  $flag = * : [0:1]
  $turn = * : [0:1]
text
  L0: write: flag1 := 1;
      read: $flag := flag0;
      while $flag = 1 do {
        read: $turn := turn;
        if $turn != 1 then {
          write: flag1 := 0;
          while $turn != 1 do { 
            nop
          };
          write: flag1 := 1
        }
      };
      goto CS;
  CS:
      write: turn := 0;
      write: flag1 := 0;
      goto L0

