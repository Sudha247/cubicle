forbidden
CS CS CS

data
  x  = * : [0:3]
  y  = * : [0:3]

process
registers
  $rx = * : [0:3]
  $ry = * : [0:3]
text
  L0: write: x := 1;
      read: $ry := y;
      if $ry != 0 then 
        goto L0;
      write: y := 1;
      read: $rx := x;
      if $rx != 1 then {
        read: $ry := y;
        if $ry != 1 then
          goto L0;
	assume: false
      };
      goto CS;
  CS: 
      write: y := 0;
      goto L0

