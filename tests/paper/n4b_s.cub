
(* n4b *)

number_procs 2

type loc = L1 | L2 | End

array PC[proc] : loc

array EAX[proc] : int
array ECX[proc] : int

weak var X : int

init (p) { PC[p] = L1 && EAX[p] = 0 && ECX[p] = 0 && X = 0 }

(* FORBIDDEN Final State *)
unsafe (p1 p2) {
    p1 = #1 && p2 = #2 &&
    PC[p1] = End && PC[p2] = End &&
    EAX[p1] = 2 && ECX[p2] = 1 }

transition t1_1 (p)
requires { p = #1 && PC[p] = L1 }
{ PC[p] := L2; EAX[p] := read(p, X) }

transition t1_2 (p)
requires { p = #1 && PC[p] = L2 }
{ PC[p] := End; write(p, X, 1) }

transition t2_1 (p)
requires { p = #2 && PC[p] = L1 }
{ PC[p] := L2; ECX[p] := read(p, X) }

transition t2_2 (p)
requires { p = #2 && PC[p] = L2 }
{ PC[p] := End; write(p, X, 2) }
