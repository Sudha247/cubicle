
number_procs 2

type pc = L1 | L2 | End

array PC[proc] : pc
var X : int
var Y : int
var R1 : int
var R2 : int

init () { PC[#1] = L1 && PC[#2] = L1 &&
     	  X = 0 && Y = 0 }

unsafe () { PC[#1] = End && PC[#2] = End &&
       	    R1 = 0 && R2 = 0 }

transition t1_1 ()
requires { PC[#1] = L1 }
{ PC[#1] := L2; X := 1 }

transition t1_2 ()
requires { PC[#1] = L2 }
{ PC[#1] := End; R1 := Y }

transition t2_1 ()
requires { PC[#2] = L1 }
{ PC[#2] := L2; Y := 1 }

transition t2_2 ()
requires { PC[#2] = L2 }
{ PC[#2] := End; R2 := X }
