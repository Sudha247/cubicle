
number_procs 3

type pc = L1 | L2 | End

array PC[proc] : pc
array R1[proc] : int
array R2[proc] : int
weak var X : int
weak var Y : int

init (p) { PC[p] = L1 && X = 0 && Y = 0 }

unsafe (p q r) { p = #1 && q = #2 && r = #3 &&
                 PC[p] = End && PC[q] = End && PC[r] = End &&
                 R1[q] = 1 && R2[q] = 0 && R1[r] = 0 }

transition t1_1 ([p])
requires { p = #1 && PC[p] = L1 }
{ PC[p] := End; X := 1 }

transition t2_1 ([p])
requires { p = #2 && PC[p] = L1 }
{ PC[p] := L2; R1[p] := X }

transition t2_2 ([p])
requires { p = #2 && PC[p] = L2 }
{ PC[p] := End; R2[p] := Y }

transition t3_1 ([p])
requires { p = #3 && PC[p] = L1 }
{ PC[p] := L2; Y := 2 }

transition t3_2 ([p])
requires { p = #3 && PC[p] = L2 }
{ PC[p] := End; R2[p] := X }
