
type location = L1 | L2 | L2b | L3 | L4

var F : bool
array A[proc] : location

init (z) { A[z] = L1 && F = True }
 
unsafe (z1 z2) { A[z1] = L3 && A[z2] = L3 }

transition t1 (x)
requires { A[x] = L1 }
{ A[x] := L2; }

transition t2 (x)
requires { A[x] = L2 && F = True }
{ F := False ;
  A[x] := L3 }

transition t3 (x)
requires { A[x] = L3 }
{ A[x] := L4; }

transition t4 (x)
requires { A[x] = L4 }
{ F := True ;
  A[x] := L1; }
