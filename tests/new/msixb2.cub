local_weak array X[proc] : bool

init (i) { X[i] = True }

unsafe (i j) { read(i, X[i]) = False && read(j, X[j]) = True }
(* unsafe (i j) { read(i, X[i]) = False && read(i, X[j]) = True } *)
(* unsafe (i j) { read(i, X[j]) = False && read(j, X[i]) = True } *)

transition t (i j)
requires { read(i, X[j]) = True }
{ write(i, X[i], True) }
