
type kind = K1 | K2

array Kind[proc] : kind
var Seq : int
chan C1[1,1] : int
chan C2[1,1] : int
group { C1, C2 }

init (p) { Seq = 1 }

invariant (p1 p2) { Kind[p1] = Kind[p2] }

unsafe () { Seq = 5 }

transition t11 ([p])
requires { Kind[p] = K1 && Seq = 1 }
{ Seq := 2; C1!1 }

transition t12 ([p])
requires { Kind[p] = K1 && Seq = 2 }
{ Seq := 3; C2!2 }

transition t21 ([p])
requires { Kind[p] = K2 && Seq = 3 && C1? = 1 }
{ Seq := 4 }

transition t22 ([p])
requires { Kind[p] = K2 && Seq = 4 && C2? = 2 }
{ Seq := 5 }
