AC_INIT(main.ml)

AC_CHECK_PROG(OCAMLC,ocamlc.opt,ocamlc.opt,no)
if test "$OCAMLC" = no ; then
	AC_MSG_ERROR(Cannot find ocamlc.)
fi

AC_CHECK_PROG(ALTERGO,alt-ergo,alt-ergo,no)
if test "$ALTERGO" = no ; then
	AC_MSG_ERROR(Cannot find alt-ergo.)
fi

OCAMLVERSION=`$OCAMLC -version`
echo "ocaml version is $OCAMLVERSION"
OCAMLLIB=`$OCAMLC -where`
echo "ocaml library path is $OCAMLLIB"

ALTERGOVERSION=`$ALTERGO -version`
echo "alt-ergo version is $ALTERGOVERSION"
ALTERGOLIBDIR=`$ALTERGO -where`
echo "alt-ergo library path is $ALTERGOLIBDIR"

AC_CHECK_PROG(OCAMLOPT,ocamlopt.opt,ocamlopt.opt,no)
OCAMLBEST=byte
if test "$OCAMLOPT" = no ; then
	AC_MSG_WARN(Cannot find ocamlopt; bytecode compilation only.)
else
        OCAMLBEST=opt
fi

AC_CHECK_PROG(OCAMLDEP,ocamldep,ocamldep,no)
if test "$OCAMLDEP" = no ; then
	AC_MSG_ERROR(Cannot find ocamldep.)
fi

AC_CHECK_PROG(OCAMLLEX,ocamllex,ocamllex,no)
if test "$OCAMLLEX" = no ; then
    AC_MSG_ERROR(Cannot find ocamllex.)
fi

AC_CHECK_PROG(OCAMLYACC,ocamlyacc,ocamlyacc,no)
if test "$OCAMLYACC" = no ; then
	AC_MSG_ERROR(Cannot find ocamlyacc.)
fi

#looking for alt-ergo library

AC_CHECK_FILE($ALTERGOLIBDIR/altErgo.cmi,ALTERGOLD=yes,ALTERGOLD=no)
if test "$ALTERGOLD" = no ; then
      AC_MSG_ERROR(Cannot find alt-ergo library.)
      ALTERGOLIB=""
else
   ALTERGOLIB="-I $ALTERGOLIBDIR"
fi

AC_MSG_CHECKING(platform)
if echo "let _ = Sys.os_type" | ocaml | grep -q Win32; then
    echo "Windows platform"
    AC_MSG_RESULT(Win32)
    OCAMLWIN32=yes
    EXE=.exe
else
    echo "Unix platform"
    OCAMLWIN32=no
    EXE=
fi

AC_SUBST(OCAMLC)
AC_SUBST(OCAMLOPT)
AC_SUBST(OCAMLDEP)
AC_SUBST(OCAMLLEX)
AC_SUBST(OCAMLYACC)
AC_SUBST(OCAMLBEST)
AC_SUBST(OCAMLVERSION)
AC_SUBST(OCAMLLIB)
AC_SUBST(ALTERGOLIB)
AC_SUBST(OCAMLWIN32)
AC_SUBST(EXE)

AC_OUTPUT(Makefile)
chmod a-w Makefile
